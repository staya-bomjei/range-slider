mixin tapper-view(options = {})
  -
    const {
      tappers = [
        {
          key: '5461687664454354578107914360704729088',
          name: 'standing',
        },
        {
          key: '1270732268820152854460583453481798467584',
          name: 'waving 1',
        },
        {
          key: '5316871259884281651280930986522574848',
          name: 'waving 2',
        },
      ],
      mainTitle = 'Формула Таппера',
      keyTitle = 'Ключ:',
    } = options;

  .tapper-view.js-tapper-view(data-tappers = tappers)
    h3.tapper-view__title= mainTitle
    .tapper-view__slider-wrapper
      .tapper-view__slider.js-tapper-view__slider
    canvas.tapper-view__canvas.js-tapper-view__canvas
    h3.tapper-view__title= keyTitle
    textarea.tapper-view__key.js-tapper-view__key(rows = 7 readonly = true)
